<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#DBDBD8"
    android:padding="5dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#175e82" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_emoji_class"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_emoji_content"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_emoji_class" />


    <ImageView
        android:id="@+id/image_view_back_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_backspace_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_emoji_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/image_view_global"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_button"
            android:padding="5dp"
            android:src="@drawable/ic_global" />

        <ImageView
            android:id="@+id/image_view_space_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/bg_space_bar" />


        <ImageView
            android:id="@+id/image_view_clear_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_button"
            android:padding="5dp"
            android:src="@drawable/ic_clear_black" />

        <ImageView
            android:id="@+id/image_view_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_button"
            android:padding="5dp"
            android:src="@drawable/ic_backspace_arrow" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>